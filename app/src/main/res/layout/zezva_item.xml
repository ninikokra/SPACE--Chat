<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_margin="@dimen/dimen_14dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/zezvaSmallBubble"
        android:layout_width="@dimen/dimen_10dp"
        android:layout_height="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:src="@drawable/bg_bubble"
        android:tint="@color/gray4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/zezvaBigBuuble"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_0dp"
        android:src="@drawable/bg_bubble"
        android:tint="@color/gray4"
        app:layout_constraintBottom_toTopOf="@id/zezvaSmallBubble"
        app:layout_constraintDimensionRatio="1.1"
        app:layout_constraintStart_toEndOf="@id/zezvaSmallBubble" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/zezvaMessageTV"
        style="@style/text_style_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_3dp"
        android:background="@drawable/bg_bubble"
        android:backgroundTint="@color/gray4"
        android:maxWidth="300dp"
        android:padding="@dimen/dimen_16dp"
        android:text="@string/zezva_text_input"
        app:layout_constraintBottom_toBottomOf="@id/zezvaBigBuuble"
        app:layout_constraintStart_toStartOf="@id/zezvaBigBuuble" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/zezvaTimeStampTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:text="@string/timestamp"
        android:textColor="@color/gray1"
        android:textSize="@dimen/dimen_8sp"
        app:layout_constraintStart_toStartOf="@id/zezvaMessageTV"
        app:layout_constraintTop_toBottomOf="@id/zezvaMessageTV"

        />
</androidx.constraintlayout.widget.ConstraintLayout>