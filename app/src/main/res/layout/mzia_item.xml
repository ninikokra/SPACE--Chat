<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_margin="14dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mziaMessageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_3dp"
        android:layout_marginBottom="@dimen/dimen_3dp"
        android:background="@drawable/bg_bubble"
        android:backgroundTint="@color/violet_light"
        android:maxWidth="300dp"
        android:padding="@dimen/dimen_16dp"
        android:text="@string/mzia_Sending_text"
        android:textColor="@color/black_light"
        app:layout_constraintBottom_toBottomOf="@id/mziaBigBubble"
        app:layout_constraintEnd_toEndOf="@id/mziaBigBubble" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mziaSmallBubble"
        android:layout_width="@dimen/dimen_10dp"
        android:layout_height="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:src="@drawable/bg_bubble"
        android:tint="@color/violet_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mziaBigBubble"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_bubble"
        android:tint="@color/violet_light"
        app:layout_constraintBottom_toTopOf="@id/mziaSmallBubble"
        app:layout_constraintDimensionRatio="1.1"
        app:layout_constraintEnd_toStartOf="@id/mziaSmallBubble" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mziaTimeStampTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:text="@string/timestamp"
        android:textColor="@color/gray1"
        android:textSize="@dimen/dimen_8sp"
        app:layout_constraintEnd_toEndOf="@id/mziaMessageTV"
        app:layout_constraintTop_toBottomOf="@id/mziaMessageTV" />
</androidx.constraintlayout.widget.ConstraintLayout>