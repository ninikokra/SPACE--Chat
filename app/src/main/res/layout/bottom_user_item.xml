<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="bottom|end"
    android:layout_margin="@dimen/dimen_14dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bottomUserMessageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_3dp"
        android:layout_marginBottom="@dimen/dimen_3dp"
        android:background="@drawable/bg_bubble"
        android:backgroundTint="@color/violet_light"
        android:maxWidth="@dimen/dimen_300dp"
        android:padding="@dimen/dimen_16dp"
        tools:text="ზეზვა როგორ ხარ?"
        android:textColor="@color/black_light"
        app:layout_constraintBottom_toBottomOf="@id/bottomUserBigBubble"
        app:layout_constraintEnd_toEndOf="@id/bottomUserBigBubble" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottomUserSmallBubble"
        android:layout_width="@dimen/dimen_10dp"
        android:layout_height="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:src="@drawable/bg_bubble"
        android:tint="@color/violet_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottomUserBigBubble"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_bubble"
        android:tint="@color/violet_light"
        app:layout_constraintBottom_toTopOf="@id/bottomUserSmallBubble"
        app:layout_constraintDimensionRatio="1.1"
        app:layout_constraintEnd_toStartOf="@id/bottomUserSmallBubble" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bottomUserTimeStampTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        tools:text="23:00 სამშ"
        android:textColor="@color/gray1"
        android:textSize="@dimen/dimen_8sp"
        app:layout_constraintEnd_toEndOf="@id/bottomUserMessageTV"
        app:layout_constraintTop_toBottomOf="@id/bottomUserMessageTV" />
</androidx.constraintlayout.widget.ConstraintLayout>